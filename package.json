{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/emonkak/feedpon.git"
  },
  "scripts": {
    "build": "wireit",
    "clean": "rm --recursive dist"
  },
  "devDependencies": {
    "esbuild": "^0.19.8",
    "typescript": "^5.3.2",
    "wireit": "^0.14.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "wireit": {
    "build": {
      "dependencies": [
        "build:css",
        "build:js",
        "build:others"
      ]
    },
    "build:css": {
      "command": "esbuild --bundle assets/css/index.css --bundle --outfile=dist/index.css",
      "files": [
        "assets/css/*.css"
      ],
      "output": [
        "dist/index.css"
      ],
      "dependencies": [
        "prebuild"
      ]
    },
    "build:js": {
      "command": "esbuild --bundle packages/feedpon/src/index.tsx --outfile=dist/index.js",
      "output": [
        "dist/index.js"
      ],
      "dependencies": [
        "prebuild",
        "tsc"
      ]
    },
    "build:others": {
      "command": "cp --recursive --target-directory dist assets/{background.js,img,index.html,manifest.json}",
      "files": [
        "assets/*"
      ],
      "output": [
        "dist/background.js",
        "dist/img/*",
        "dist/index.html",
        "dist/manifest.json"
      ],
      "dependencies": [
        "prebuild"
      ]
    },
    "prebuild": {
      "command": "mkdir --parents dist",
      "output": [
        "dist"
      ]
    },
    "tsc": {
      "command": "tsc --build",
      "files": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "packages/*/tsconfig.json"
      ]
    }
  }
}
