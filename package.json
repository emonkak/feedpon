{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/emonkak/feedpon.git"
  },
  "scripts": {
    "build": "wireit",
    "ci": "wireit",
    "clean": "rm --recursive dist",
    "format": "wireit",
    "lint": "wireit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "esbuild": "^0.19.8",
    "typescript": "^5.3.2",
    "wireit": "^0.14.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "wireit": {
    "build": {
      "dependencies": [
        "build:css",
        "build:js",
        "build:others"
      ]
    },
    "build:css": {
      "command": "esbuild --bundle assets/css/index.css --bundle --outfile=dist/index.css",
      "files": [
        "assets/css/*"
      ],
      "output": [
        "dist/index.css"
      ],
      "dependencies": [
        "prebuild"
      ]
    },
    "build:js": {
      "command": "esbuild --bundle packages/feedpon/src/index.tsx --outfile=dist/index.js",
      "files": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "packages/*/tsconfig.json"
      ],
      "output": [
        "dist/index.js"
      ],
      "dependencies": [
        "prebuild",
        "tsc"
      ]
    },
    "build:others": {
      "command": "cp --recursive --target-directory dist assets/{background.js,img,index.html,manifest.json}",
      "clean": "if-file-deleted",
      "files": [
        "assets/background.js",
        "assets/img/*",
        "assets/index.html",
        "assets/manifest.json"
      ],
      "output": [
        "dist/background.js",
        "dist/img/*",
        "dist/index.html",
        "dist/manifest.json"
      ],
      "dependencies": [
        "prebuild"
      ]
    },
    "check": {
      "command": "biome check .",
      "files": [
        "packages/**/*.ts",
        "packages/**/*.tsx"
      ],
      "output": []
    },
    "ci": {
      "dependencies": [
        "build",
        "check"
      ]
    },
    "format": {
      "command": "biome format --write ."
    },
    "prebuild": {
      "clean": false,
      "command": "mkdir --parents dist",
      "files": [],
      "output": [
        "dist"
      ]
    },
    "tsc": {
      "command": "tsc --build",
      "files": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "packages/*/tsconfig.json"
      ],
      "output": []
    }
  }
}
